<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/customer_waypoint_order"
        android:layout_alignParentLeft="true"
        android:background="@color/list_background"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:layout_alignBottom="@+id/customer_waypoint_name" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="customerName"
        android:id="@+id/customer_waypoint_name"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/customer_waypoint_order" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:text="(price)"
        android:id="@+id/customer_waypoint_price"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/customer_waypoint_name" />

</RelativeLayout>