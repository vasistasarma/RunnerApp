<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/customer_waypoint_order"
        android:layout_alignParentLeft="true"
        android:background="@color/list_background"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/customer_waypoint_name" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="customerName"
        android:id="@+id/customer_waypoint_name"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/customer_waypoint_order"
        android:layout_toLeftOf="@+id/customer_waypoint_price"
        android:layout_toStartOf="@+id/customer_waypoint_price" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="customerAddress"
        android:autoLink="map"
        android:linksClickable="true"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:id="@+id/customer_waypoint_address"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/customer_waypoint_name"
        android:layout_toRightOf="@+id/customer_waypoint_order"
        android:layout_toStartOf="@+id/customer_waypoint_not_delivered"
        android:clickable="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_alignRight="@+id/customer_waypoint_name"
        android:layout_alignEnd="@+id/customer_waypoint_name" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="customerPhoneNumber"
        android:autoLink="phone"
        android:linksClickable="true"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:id="@+id/customer_waypoint_phone"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/customer_waypoint_name"
        android:layout_toRightOf="@+id/customer_waypoint_address"
        android:clickable="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:text="(price)"
        android:id="@+id/customer_waypoint_price"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/customer_waypoint_delivery_status"
        android:layout_toStartOf="@+id/customer_waypoint_delivery_status" />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/customer_waypoint_delivery_status"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:src="@drawable/item_delivery_grey"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/customer_waypoint_not_delivered"
        android:layout_toStartOf="@+id/customer_waypoint_not_delivered" />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/customer_waypoint_not_delivered"
        android:gravity="center_vertical"
        android:background="@color/list_background"
        android:src="@drawable/ic_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout><!-- From: file:/Users/praveenthota/AndroidStudioProjects/RunnerAppLatest/RunnerApp/app/src/main/res/layout/customer_waypoints_list.xml -->